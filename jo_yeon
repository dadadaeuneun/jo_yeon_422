import streamlit as st
from PIL import Image

# 페이지 설정
st.set_page_config(
    page_title="🐼 주연이를 위한 판다 사이트",
    page_icon="🐼",
    layout="centered"
)

# 배경 이미지
def set_bg():
    st.markdown(
        """
        <style>
        .stApp {
            background-image: url("https://images.unsplash.com/photo-1603543908528-06259fae0c41");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        .main-title {
            font-size: 48px;
            font-weight: bold;
            text-align: center;
            color: white;
            text-shadow: 2px 2px 4px #000000;
            margin-top: 50px;
        }
        .sub-msg {
            font-size: 30px;
            text-align: center;
            margin-top: 30px;
            color: #fffbe7;
        }
        </style>
        """,
        unsafe_allow_html=True
    )

# 배경 적용
set_bg()

# 본문
st.markdown('<div class="main-title">🐼 판다에 의한, 판다를 위한, 주연이를 위한 🐼</div>', unsafe_allow_html=True)
st.markdown('<div class="sub-msg">한달 뒤에 봐용 🐼</div>', unsafe_allow_html=True)

# 귀여운 판다 이미지
st.image("https://cdn.pixabay.com/photo/2017/01/06/19/15/panda-1956875_1280.jpg", use_column_width=True)

# 판다 이모지들로 마무리
st.markdown("### 🐼 🐼 🐼 🐼 🐼 🐼 🐼")

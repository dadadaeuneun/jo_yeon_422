import streamlit as st

# 페이지 기본 설정
st.set_page_config(
    page_title="주연이를 위한 판다 사이트",
    page_icon="🐼",
    layout="centered"
)

# 제목
st.markdown("# 🐼 판다 🐼")
st.write("")

# 메인 메시지
st.markdown("## 💌 한달 뒤에 봐용 💌")
st.write("")

# 판다 이미지
st.image("https://cdn.pixabay.com/photo/2017/01/06/19/15/panda-1956875_1280.jpg", caption="🐼 귀여운 판다 한 마리", use_column_width=True)
st.write("")

# 판다 이모지 반복
st.markdown("### 🐼 🐼 🐼 🐼 🐼 🐼 🐼 🐼 🐼")

# 바닥글
st.write("---")
st.caption("만든 사람: 다은 🐼")
